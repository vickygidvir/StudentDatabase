<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"

    android:gravity="center"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp"
        android:background="@drawable/xyz"
        android:text="STUDENT DETAILS"
        android:textSize="20sp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:padding="5dp"
        android:rowCount="3">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:text="Enter the Rollno" />

        <EditText
            android:id="@+id/editRollno"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:hint="Roll Number"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:text="Enter the Name" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:inputType="text" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:text="Enter the Marks" />

        <EditText
            android:id="@+id/editMarks"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:hint="Marks"
            android:inputType="numberSigned|textPersonName" />

    </GridLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TableRow
            android:layout_width="445dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/xyz"
                android:layout_marginLeft="50dp"
                android:text="Add" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/xyz"
                android:text="Delete" />

            <Button
                android:id="@+id/btnModify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/xyz"
                android:layout_marginRight="40dp"
                android:text="Modify" />
        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/btnView"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rec"
android:layout_marginLeft="30dp"
                android:text="View" />

            <Button
                android:id="@+id/btnViewall"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rec"
                android:text="Viewall" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/btnShow"
                android:layout_width="131dp"
                android:layout_height="98dp"
                android:background="@drawable/back"

                android:text="Show" />

        </TableRow>
    </TableLayout>


</LinearLayout>